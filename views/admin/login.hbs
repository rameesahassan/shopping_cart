<section>
    <div class="container" style="background-color: #eee;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;">

        <div class="card" style="width: 400px;
    padding: 20px;
    border:none;">

            <div class="text-center intro">
                <img src="https://i.imgur.com/uNiv4bD.png" width="160">


            </div>
            <form action="/admin/login" method="post">

                <div class="mt-4 text-center">

                    <h4>Admin Log In.</h4>
                    {{#if adminLoginErr}}
                    <p class="error text-danger">{{adminLoginErr}}</p>
                    {{/if}}


                    <div class="mt-3 inputbox" style=" margin-bottom: 10px;
    position: relative;">

                        <input type="text" class="form-control" style="text-indent: 14px;" name="email"
                            placeholder="Email">


                        <i class="fa fa-user"></i>

                    </div>


                    <div class="inputbox">

                        <input type="password" class="form-control" style="text-indent: 14px;" name="password"
                            placeholder="Password">
                        <i class="fa fa-lock"></i>


                    </div>

                </div>


                <div class="d-flex justify-content-between">

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Keep me Logged in
                        </label>
                    </div>

                    <div>
                        <a href="/admin/signup" class="forgot">Create New Account?</a>
                    </div>

                </div>

                <div class="mt-2">


                    <button class="btn btn-primary btn-block">Log In</button>


                </div>
            </form>






        </div>
    </div>
</section>