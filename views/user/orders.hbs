<section>
    <div class="container">
    
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th col="scope">Date</th>
                        <th >Address</th>
                        <th>Pincode</th>
                        <th>Mobile</th>
                        <th col="scope">Amount</th>
                        <th col="scope">Payment</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>{{this.delivaryDetails.address}}</td>
                        <td>{{this.delivaryDetails.pincode}}</td>
                        <td>{{this.delivaryDetails.mobile}}</td>
                        <td>{{this.totalAmount}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.status}}</td>
                        <td>
                            <a href="/view-order-products1/{{this._id}}" class="btn btn-primary">View Products</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        
    </div>
</section>